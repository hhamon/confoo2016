{% extends 'base.html.twig' %}

{% block title job.title|title %}

{% block body %}

    <h1>{{ block('title') }}</h1>

    <div class="job-offer" id="job-{{ job.id }}">
        <h2>{{ job.title|title }}</h2>
        <p>{{ job.description|nl2br }}</p>
        <p class="job-metas">
            Posted by {{ job.companyName }} on
            {{ job.createdAt|date }}.
            <br/>
            This offer is valid until {{ job.expiresAt|date }}.
        </p>
    </div>

{% endblock %}
